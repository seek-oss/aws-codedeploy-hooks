    "esbuild": "~0.25.0",
    "skuba": "12.2.0"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20.10"
  },
  "skuba": {
    "entryPoint": "packages/hooks/src/index.ts",
    "template": "oss-npm-package",
    "type": "package",
    "version": "12.1.1"
